<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Game of life">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Padding" Value="3" />
            <Setter Property="Margin" Value="0 0 5 0" />
        </Style>
    </Window.Resources>
    <StackPanel>
        <StackPanel Margin="3" Orientation="Horizontal">
            <Button Click="NextGeneration">Next Generation</Button>
            <Button Click="ResetGame">Reset</Button>
            <Label>Generations:</Label><Label x:Name="IterationNo" />
            <Label>Alive cells:</Label><Label x:Name="AliveCells" />
        </StackPanel>
        <Canvas x:Name="Canvas" Margin="4"
                MouseDown="GiveOrTakeLife" MouseMove="GiveOrTakeLife" />
    </StackPanel>
</Window>